#include "libft.h"

char	*ft_strnstr(const char *big, const char *little, size_t len)
{
	size_t	i;
	size_t	j;
	char	*start;
	size_t	count;

	i = 0;
	j = 0;
	if (big == NULL && len == 0)
		return (NULL);
	if (little[0] == '\0')
		return ((char *)big);
	count = 0;
	while (1)
	{
		start = 0;
		while (big[i] != little[j])
		{
			i++;
			count++;
		}
		if (count >= len)
			return (NULL);
		if (big[i] == little[j])
			start = (char *)big + i;
		while (big[i] == little[j])
		{
			count++;
			i++;
			j++;
			if (little[j] == '\0')
				return ((char *)start);
			if (count >= len)
				return (NULL);
		}
		if (big[i] != little[j] && start != 0)
			j = 0;
	}
}
